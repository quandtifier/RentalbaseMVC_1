@model Rentalbase.ViewModels.TenantIndexData

@{
    ViewBag.Title = "Tenants";
}

<h2>Tenants</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Date Registered</th>
        <th>Email</th>
        <th>Phone</th>

        <th></th>
    </tr>

@foreach (var item in Model.Tenants) {
    string selectedRow = "";
    if (item.ID == ViewBag.TenantID)
    {
        selectedRow = "success";
    }
    <tr class="@selectedRow">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>

        <td>
            @Html.ActionLink("Select", "Index", new { id = item.ID }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>

@if (Model.Leases != null)
{
    <h3>Leases assigned to this tenant</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Number</th>
            <th>Start Date</th>
            <th>End Date </th>
            <th>Rate</th>
        </tr>

        @foreach (var item in Model.Leases)
        {
            string selectedRow = "";
            if (item.ID == ViewBag.CourseID)
            {
                selectedRow = "success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.ActionLink("Select", "Index", new { ID = item.ID })
            </td>
            <td>@item.ID</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.RateMonthly</td>
        </tr>
        }
    </table>
}